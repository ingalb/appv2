<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
		    xmlns:android="http://schemas.android.com/apk/res/android"
        id = "com.vllaznia.app"
        versionCode = "1514"
        version = "2.6.0">
    <name>Vllaznia</name>

    <description>
       Aplikacioni realizuar per Futboll Klub Vllaznia Shkoder. Historia, lajme, informacione dhe statistika nga ekipi i pare shqiptar Vllaznia Shkoder (Albania).
    </description>

    <author href="http://www.ingalb.info" email="contact@ingalb.info">
        Ingalb Company
    </author>

    <content src="index.html"/>
	
    <preference name='phonegap-version' value='cli-8.0.0' />
	
    <gap:plugin name="cordova-plugin-device" source="npm"/>
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
    <gap:plugin name="cordova-plugin-network-information" source="npm" />
    <gap:plugin name="cordova-plugin-statusbar" source="npm"/>
    <gap:plugin name="cordova-plugin-splashscreen" source="npm"/>
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <plugin name="ionic-plugin-keyboard" source="npm" />
    <gap:plugin name="cordova-plugin-apprate" source="npm"/>
    <plugin name="cordova-plugin-admobpro" source="npm"/>
    <gap:plugin name="onesignal-cordova-plugin" source="npm" />
    <gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />	


    <preference name="permissions"  value="none"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="android-minSdkVersion"      value="15" />              <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    <preference name="android-installLocation"    value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->

    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
 <!--   <preference name="auto-hide-splash-screen" value="true" />-->
    <preference name="AutoHideSplashScreen" value="false" />	
    <!--	<preference name="splash-screen-duration" value="500000" />-->
    <preference name="SplashScreenDelay" value="3000"/>
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="ShowSplashScreenSpinner" value="false" />

	

   
    <!-- <icon src="icon.png" />
    <splash src="splash.png" />
   -->
    <icon src="res/icon/android/icon-36-ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="res/icon/android/icon-48-mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="res/icon/android/icon-144-xxhdpi.png" platform="android" qualifier="xxhdpi" />

    <splash src="res/screen/android/ldpi.png" platform="android" qualifier="ldpi" />
    <splash src="res/screen/android/mdpi.png" platform="android" qualifier="mdpi" />
    <splash src="res/screen/android/hdpi.png" platform="android" qualifier="hdpi" />
    <splash src="res/screen/android/xhdpi.png" platform="android" qualifier="xhdpi" />
    <splash src="res/screen/android/portrait-xxhdpi.png" platform="android" qualifier="port-xxhdpi" />
    <splash src="res/screen/android/xxhdpi.png" platform="android" qualifier="land-xxhdpi" />


    <access origin="*"/>
    <access origin="ingalb.info" subdomains="true"/>
    <access origin="ingalb.com" subdomains="true"/>
    <access origin="albaniasoccer.com" subdomains="true"/>
    <access origin="fkvllaznia.net" subdomains="true"/>
    <access origin="heroku.com/" subdomains="true"/>
    <access origin="googleapis.com" subdomains="true"/>

    <allow-navigation href="*" />
    <allow-navigation href="data:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
 </widget>
